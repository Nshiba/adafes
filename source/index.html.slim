    section
      h2 魅力的な企画がたくさん
      p ここにコンテンツ
      = link_to "もっと見る",  "eventlist.html", class: "btn btn-primary"

    section
      h2 足立区のお店で楽しもう
      p ここにコンテンツ
      = link_to "もっと見る", "shoplist.html", class: "btn btn-primary"

    section#top-sponsers
      h2 協賛
      .row
        ul
          - data.sponsers.each do |v|
            li.col-md-4.col-sm-4
              - unless v.img.nil?
                == link_to v.url, target: "_blank" do
                  img src=v.img
              - else
                == link_to v.name, v.url, target: "_blank"

    / section#shop
