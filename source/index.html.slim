      / //jsでランダム表記
      / ul.list-group
        / - (1..3).each do |i|
          / li.list-group-item
            / == tag :img, src: "images/a#{i}.jpg", class: "img-responsive"
        / / li.list-group-item A店
        / / li.list-group-item B店
        / / li.list-group-item C店
